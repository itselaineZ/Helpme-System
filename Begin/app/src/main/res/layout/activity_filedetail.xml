<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/mainbackground"
            android:id="@+id/iv_filedetailactivity_bg"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="229dp"
            android:layout_height="41dp" android:id="@+id/tv_filedetailactivity_coursename"
            app:layout_constraintTop_toTopOf="@+id/iv_filedetailactivity_bg" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp" android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" tools:text="课程名称" android:textSize="30sp"/>
    <Button
            android:text="下载"
            android:layout_width="253dp"
            android:layout_height="43dp" android:id="@+id/bt_filedetailactivity_download"
            android:layout_marginTop="63dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_filedetailactivity_filename"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="#DAB103" android:textColor="#FFFFFF"/>
    <TextView
            android:layout_width="232dp"
            android:layout_height="51dp" android:id="@+id/tv_filedetailactivity_filename"
            app:layout_constraintTop_toBottomOf="@+id/tv_filedetailactivity_coursename"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintHorizontal_bias="0.506" android:textSize="30sp"
            android:textColor="#FFFFFF" tools:text="资料名称"/>
    <RadioGroup
            android:layout_width="252dp"
            android:layout_height="160dp"
            android:id="@+id/rg_filedetailactivity_evaluate"
            app:layout_constraintTop_toBottomOf="@+id/bt_filedetailactivity_download"
            android:layout_marginTop="100dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.51">
        <RadioButton
                android:text="1 Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_filedetailactivity_one"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:text="2 Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_filedetailactivity_two"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:text="3 Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_filedetailactivity_three"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:text="4 Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_filedetailactivity_four"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:text="5 Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_filedetailactivity_five"
                android:textColor="#FFFFFF"/>
    </RadioGroup>
    <TextView
            android:text="评分"
            android:layout_width="61dp"
            android:layout_height="31dp" android:id="@+id/tv_filedetailactivity_itemname"
            app:layout_constraintTop_toBottomOf="@+id/bt_filedetailactivity_download"
            android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/rg_filedetailactivity_evaluate"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FFFFFF" android:textSize="24sp" app:layout_constraintHorizontal_bias="0.216"/>
    <ImageView
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_left_back"
            android:id="@+id/iv_filedetailactivity_back" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
            android:layout_marginStart="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>