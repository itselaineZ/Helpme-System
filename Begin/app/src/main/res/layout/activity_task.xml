<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:background="@drawable/taskbackground"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageButton
            android:layout_width="130dp"
            android:layout_height="120dp" app:srcCompat="@drawable/setting"
            android:id="@+id/ib_taskactivity_userbt" android:background="#000099CC"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib_taskactivity_taskbt"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/rl_taskactivity_recieve" android:onClick="onClick"/>
    <ImageButton
            android:layout_width="130dp"
            android:layout_height="120dp" app:srcCompat="@drawable/course"
            android:id="@+id/ib_taskactivity_courselistbt" android:background="#020099CC"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_taskactivity_recieve" android:onClick="onClick"/>
    <ImageButton
            android:layout_width="130dp"
            android:layout_height="120dp" app:srcCompat="@drawable/task"
            android:id="@+id/ib_taskactivity_taskbt" android:background="#000099CC"
            app:layout_constraintStart_toEndOf="@+id/ib_taskactivity_courselistbt"
            app:layout_constraintTop_toBottomOf="@+id/rl_taskactivity_recieve"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="onClick"/>
    <RelativeLayout
            android:background="#00FFE4B5" android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/rl_taskactivity_recieve" android:layout_height="334dp"
            android:layout_width="393dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_taskactivity_release" android:onClick="onClick">
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="392dp"
            android:layout_height="377dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/rl_taskactivity_release"
            app:layout_constraintTop_toTopOf="parent" android:onClick="onClick" android:clickable="true">

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>