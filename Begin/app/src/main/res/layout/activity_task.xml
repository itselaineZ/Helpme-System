<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/taskbackground"
            android:id="@+id/iv_taskactivity_bg" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="130dp"
            android:layout_height="120dp" app:srcCompat="@drawable/setting"
            android:id="@+id/ib_taskactivity_userbt" android:background="#000099CC"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib_taskactivity_taskbt"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageButton
            android:layout_width="130dp"
            android:layout_height="120dp" app:srcCompat="@drawable/course"
            android:id="@+id/ib_taskactivity_courselistbt" android:background="#020099CC"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="130dp"
            android:layout_height="120dp" app:srcCompat="@drawable/task"
            android:id="@+id/ib_taskactivity_taskbt" android:background="#000099CC"
            app:layout_constraintStart_toEndOf="@+id/ib_taskactivity_courselistbt"
            app:layout_constraintBottom_toBottomOf="@+id/iv_taskactivity_bg"
    />
    <RelativeLayout
            android:background="#00FFE4B5" android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/rl_taskactivity_recieve" android:layout_height="334dp"
            android:layout_width="393dp" app:layout_constraintBottom_toTopOf="@+id/ib_taskactivity_taskbt">
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="392dp"
            android:layout_height="377dp"
            app:layout_constraintTop_toTopOf="@+id/iv_taskactivity_bg" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rl_taskactivity_recieve" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/rl_taskactivity_release">

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>