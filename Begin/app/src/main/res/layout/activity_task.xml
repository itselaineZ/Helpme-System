<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/rl_taskactivity_bottom"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/holo_blue_dark" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0">

        <ImageButton
                android:layout_width="137dp"
                android:layout_height="80dp" app:srcCompat="@android:drawable/ic_menu_agenda"
                android:id="@+id/ib_taskactivity_courselistbt" android:background="@android:color/holo_blue_dark"/>
        <ImageButton
                android:layout_width="137dp"
                android:layout_height="80dp" app:srcCompat="@android:drawable/ic_dialog_dialer"
                android:id="@+id/ib_taskactivity_taskbt" android:background="@android:color/holo_blue_dark"
                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                android:layout_marginRight="137dp" android:layout_marginEnd="137dp"/>
        <ImageButton
                android:layout_width="137dp"
                android:layout_height="80dp" app:srcCompat="@android:drawable/ic_menu_my_calendar"
                android:id="@+id/ib_taskactivity_userbt" android:background="@android:color/holo_blue_dark"
                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                android:layout_marginRight="0dp" android:layout_marginEnd="0dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/rl_taskactivity_top"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0">

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="410dp"
            android:layout_height="299dp"
            android:id="@+id/rl_taskactivity_release"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.092"
            android:clickable="true" android:background="#FFB6C1">
        <ImageView
                android:layout_width="146dp"
                android:layout_height="136dp" app:srcCompat="@drawable/notificationinformation"
                android:id="@+id/iv_taskactivity_releasepic" android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp" android:layout_marginTop="70dp"/>
        <TextView
                android:text="发布任务"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_taskactivity_releaseword"
                android:textColor="#000000"
                android:textSize="36sp" android:layout_marginTop="100dp"
                android:layout_marginLeft="200dp" android:layout_marginStart="200dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="413dp"
            android:layout_height="313dp"
            android:background="#FFE4B5" android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.808"
            android:id="@+id/rl_taskactivity_recieve">

        <ImageView
                android:layout_width="146dp"
                android:layout_height="136dp" app:srcCompat="@drawable/projectpersonnel"
                android:id="@+id/iv_taskactivity_recievepic" android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp" android:layout_marginTop="80dp"/>
        <TextView
                android:text="接收任务"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_taskactivity_recieveword"
                android:textSize="36sp" android:textColor="#000000" android:layout_marginLeft="200dp"
                android:layout_marginStart="200dp" android:layout_marginTop="120dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>