<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#F8F8F8"
                                                   app:layout_constraintBottom_toBottomOf="parent"
                                                   app:layout_constraintEnd_toEndOf="parent"
                                                   app:layout_constraintStart_toStartOf="parent"
                                                   app:layout_constraintTop_toTopOf="parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/mainbackground"
            android:id="@+id/iv_courselistactivity_bg" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ib_courselistactivity_userbt"/>
    <ImageButton
            android:layout_width="130dp"
            android:layout_height="118dp" app:srcCompat="@drawable/course"
            android:id="@+id/ib_courselistactivity_coursebt" android:background="#000099CC"
            app:layout_constraintTop_toBottomOf="@+id/rv_CourselistActivity_list"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="130dp"
            android:layout_height="118dp" app:srcCompat="@drawable/task"
            android:id="@+id/ib_courseactivity_taskbt" android:background="#000099CC"
            app:layout_constraintTop_toBottomOf="@+id/rv_CourselistActivity_list"
            app:layout_constraintStart_toEndOf="@+id/ib_courselistactivity_coursebt"
            app:layout_constraintEnd_toStartOf="@+id/ib_courselistactivity_userbt"
            app:layout_constraintHorizontal_bias="0.03"/>
    <ImageButton
            android:layout_width="128dp"
            android:layout_height="120dp" app:srcCompat="@drawable/setting"
            android:id="@+id/ib_courselistactivity_userbt"
            android:background="#000099CC"
            app:layout_constraintTop_toTopOf="@+id/ib_courseactivity_taskbt" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintVertical_bias="1.0"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="392dp"
            android:layout_height="709dp"
            android:id="@+id/rv_CourselistActivity_list"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>