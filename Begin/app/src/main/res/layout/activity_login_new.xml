<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/loginbackground"
            android:id="@+id/iv_loginactivity_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:id="@+id/iv_loginactivity_Showcodes_new"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="1.5"
            android:onClick="onClick"
            app:layout_constraintTop_toBottomOf="@+id/et_loginactivity_password_new"
            app:layout_constraintStart_toEndOf="@+id/et_loginactivity_inputcodes_new" android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp" android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="233dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_loginactivity_username"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="96dp" android:layout_marginTop="236dp" android:layout_marginStart="96dp"
            android:hint="请输入邮箱" android:textColor="#FFFFFF" android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"/>
    <EditText
            android:layout_width="233dp"
            android:layout_height="44dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_loginactivity_password_new"
            app:layout_constraintTop_toBottomOf="@+id/et_loginactivity_username"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"
            android:layout_marginTop="32dp" android:layout_marginStart="96dp" android:hint="请输入密码"
            android:textColor="#FFFFFF" android:textColorHint="#FFFFFF"/>
    <EditText
            android:layout_width="106dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_loginactivity_inputcodes_new"
            android:textColor="#FFFFFF" android:textColorHint="#FFFFFF"
            android:hint="验证码"
            app:layout_constraintTop_toBottomOf="@+id/et_loginactivity_password_new" android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"
            android:layout_marginStart="96dp"/>
    <TextView
            android:layout_width="296dp"
            android:layout_height="44dp" android:id="@+id/tv_loginactivity_login_new"
            app:layout_constraintTop_toBottomOf="@+id/et_loginactivity_inputcodes_new"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp" android:layout_marginStart="50dp"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="22dp" android:id="@+id/tv_loginactivity_register_new"
            app:layout_constraintTop_toBottomOf="@+id/tv_loginactivity_login_new"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="144dp"
            android:layout_marginTop="40dp" android:layout_marginStart="144dp"/>
    <TextView
            android:layout_width="72dp"
            android:layout_height="22dp" android:id="@+id/tv_loginactivity_cue_new"
            app:layout_constraintTop_toBottomOf="@+id/tv_loginactivity_login_new"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="272dp"
            android:layout_marginTop="40dp" android:layout_marginStart="272dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>