<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="80dp" android:background="#00FFFFFF">

    <TextView
            android:layout_width="249dp"
            android:layout_height="53dp" android:id="@+id/tv_filename"
            tools:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="0.526" android:textColor="#FFFFFF" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" tools:text="测试文件" android:background="#00FFFFFF"
            android:textStyle="bold" app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.333"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline3" app:layout_constraintGuide_begin="4dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline4" app:layout_constraintGuide_end="4dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline5" app:layout_constraintGuide_begin="264dp"/>
    <TextView
            android:text="Score :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_score"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.762" app:layout_constraintVertical_bias="0.21"
            android:background="#00FFFFFF" android:textStyle="bold"/>
    <TextView
            android:text="Downloads :"
            android:layout_width="74dp"
            android:layout_height="18dp" android:id="@+id/tv_downloads"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.833" app:layout_constraintVertical_bias="0.741"
            android:background="#00FFFFFF" android:textStyle="bold"/>
    <TextView
            android:layout_width="62dp"
            android:layout_height="20dp" android:id="@+id/tv_filescore"
            android:textColor="#FFA69E"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.266"
            tools:text="TextView" android:background="#00FFFFFF" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tv_score" app:layout_constraintHorizontal_bias="0.238"/>
    <TextView
            android:layout_width="52dp"
            android:layout_height="21dp" android:id="@+id/tv_filedownloads"
            android:textColor="#FFE74C"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.779"
            tools:text="TextView" android:background="#00FFFFFF" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tv_downloads" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>